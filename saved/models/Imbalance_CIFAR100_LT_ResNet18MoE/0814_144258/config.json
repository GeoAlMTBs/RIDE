{
    "name": "Imbalance_CIFAR100_LT_ResNet18MoE",
    "n_gpu": 1,
    "arch": {
        "type": "ResNet18MoEModel",
        "args": {
            "num_classes": 100,
            "use_conv_moe": [
                0,
                0,
                0,
                0
            ],
            "num_expert": 8,
            "moe_top_k": 2
        }
    },
    "data_loader": {
        "type": "ImbalanceCIFAR100DataLoader",
        "args": {
            "data_dir": "data",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.1,
            "weight_decay": 0.0005,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": false,
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {
            "reweight_CE": false
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [
                100,
                150
            ],
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 40,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}